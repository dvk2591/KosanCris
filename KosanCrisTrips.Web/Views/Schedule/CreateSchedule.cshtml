@using KosanCrisTrips.Web.Models
@model Schedule

@{
    ViewBag.Title = "CreateSchedule";
    List<SelectListItem> locations = new List<SelectListItem>();
    List<SelectListItem> natureOfServices = new List<SelectListItem>();
    List<SelectListItem> companies = new List<SelectListItem>();
    List<SelectListItem> workOrders = new List<SelectListItem>();
}


<h2>Create Schedule</h2>

<div class="container">
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.Location, new { @class = "col-sm-3" })
        @Html.DropDownList("Location", locations, new { @class = "col-sm-3" })

    </div>
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.SelectedNatureOfService, "Nature Of Service", new { @class = "col-sm-3" })
        @Html.DropDownList("SelectedNatureOfService", natureOfServices, new { @class = "col-sm-3" })
    </div>
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.SelectedCompany, "Company", new { @class = "col-sm-3" })
        @Html.DropDownList("SelectedCompany", companies, new { @class = "col-sm-3" })
    </div>
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.WorkOrder, "Work Order", new { @class = "col-sm-3" })
        @Html.DropDownList("WorkOrder", workOrders, new { @class = "col-sm-3" })
    </div>
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.SelectedNatureOfService.IsReportRequired, "Is Report Required", new { @class = "col-sm-3" })
        @*<div class="switch slider round col-sm-3">
            @Html.RadioButtonFor(x => x.SelectedNatureOfService.IsReportRequired, true) Yes
            @Html.RadioButtonFor(x => x.SelectedNatureOfService.IsReportRequired, false) No
        </div>*@
        <div class="switch col-sm-3">
            <input id="cmn-toggle-2" class="cmn-toggle cmn-toggle-round" type="checkbox">
            <label for="cmn-toggle-2"></label>
        </div>
    </div>
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.StartDate, "Start Date", new { @class = "col-sm-3" })
        @*@Html.TextBoxFor(x => x.StartDate, new { @class = "col-sm-3" })*@
        <div class='col-sm-3'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row form-group col-sm-12">
        @Html.LabelFor(x => x.EndDate, "End Date", new { @class = "col-sm-3" })
        @*@Html.TextBoxFor(x => x.EndDate, new { @class = "col-sm-3" })*@
        <div class='col-sm-3'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>


    @*
    Data table for Schedule Grid    
    *@

    @{ Html.RenderPartial("_ScheduleGridView"); }
</div>

