@using KosanCrisTrips.Web.Models
@using KosanCrisTrips.Web.Extensions
@model Schedule

<link href="~/Content/switch/simple-switch.css" rel="stylesheet" />
<script src="~/Scripts/Custom/CreateSchedule.js"></script>
@{
    ViewBag.Title = "CreateSchedule";
    List<LookUpViewModel> customerLocationsLookUp = new List<LookUpViewModel>();
    List<LookUpViewModel> natureOfServices = new List<LookUpViewModel>();
    List<LookUpViewModel> workOrders = new List<LookUpViewModel>();

    customerLocationsLookUp = TempData["CustomerLocationsLookUp"] as List<LookUpViewModel>;
    natureOfServices = TempData["NatureOfServices"] as List<LookUpViewModel>;
}


<h2>Create Schedule</h2>

<div class="container">
    <div class="row form-group col-lg-6">
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.LabelFor(x => x.Location, new { @class = "" })
        </div>
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.DropDownList("Location", customerLocationsLookUp?.ToSelectListItems(), new { @class = "chosen-select", @id= "customerLocationsLookUp" })
            @Html.Hidden("Location", "", new { @id = "hdnLocation" })
            @*<input type="text" id="customerLocationsLookUp" />*@

        </div>

    </div>
    <div class="row form-group col-lg-6">
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.LabelFor(x => x.SelectedNatureOfService, "Nature Of Service", new { @class = "" })
        </div>
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.DropDownList("SelectedNatureOfService",natureOfServices?.ToSelectListItems(), new { @class = "chosen-select", @id= "natureOfServices" })
            @Html.Hidden("SelectedNatureOfService","",new { @id= "hdnSelectedNatureOfService" })
        </div>
    </div>
    <div class="row form-group col-lg-6">
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.LabelFor(x => x.WorkOrder, "Work Order", new { @class = "" })
        </div>
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.DropDownList("WorkOrder", workOrders?.ToSelectListItems(), new { @class = "chosen-select", @id = "workOrders" })
        </div>
    </div>
    <div class="row form-group col-lg-6">
        <div class="col-sm-6 col-md-5 col-lg-4">
            @Html.LabelFor(x => x.SelectedNatureOfService.IsReportRequired, "Is Report Required", new { @class = "" })
        </div>
        @*<div class="switch col-sm-6 col-md-5 col-lg-3">
                <input id="cmn-toggle-2" class="cmn-toggle cmn-toggle-round" type="checkbox">
                <label for="cmn-toggle-2"></label>
            </div>*@
        @*<div class="checkbox checkbox-info checkbox-circle">
                <input id="check8" class="styled" type="checkbox" checked>
            </div>*@
        <div class="switch col-sm-6 col-md-5 col-lg-2">
            <input type="checkbox" class="switchdemo">
        </div>
    </div>
    <div class="row form-group col-lg-6">
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.LabelFor(x => x.StartDate, "Start Date", new { @class = "" })
        </div>
        @*@Html.TextBoxFor(x => x.StartDate, new { @class = "col-sm-3" })*@
        <div class='col-sm-6 col-md-5 col-lg-3'>
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>

        </div>
    </div>
    <div class="row form-group col-lg-6">
        <div class="col-sm-6 col-md-5 col-lg-3">
            @Html.LabelFor(x => x.EndDate, "End Date", new { @class = "" })
        </div>
        @*@Html.TextBoxFor(x => x.EndDate, new { @class = "col-sm-3" })*@
        <div class='col-sm-6 col-md-5 col-lg-3'>
            <div class='input-group date' id='datetimepicker2'>
                <input type='text' class="" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>


